{
  "manifest_version": 3,
  "name": "Mailtoon Extension",
  "version": "1.0",
  "description": "#1 Marketing Tool",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
